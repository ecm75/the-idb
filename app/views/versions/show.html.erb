<%- version = k(:version, @version) -%>


<div id="versions-show">

<div class="row-fluid tabbable">
  <div class="span12">
    <div class="navbar">
      <div class="navbar-inner">
        <div class="container-fluid">
          <%= version.header_link(@version) %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <span style="color: #777777"><%= version.summary %></span>
    <%= version.diff_css %>
    <%- version.changesets do |attribute, changeset| -%>
      <h4><%= attribute %></h4>
      <%- if attribute == "Machine" %>
      <%= version.diff_html_machine(changeset) %>
      <%- elsif attribute == "Location" || attribute == "Power feed a" || attribute == "Power feed b" %>
      <%= version.diff_html_location(changeset) %>
      <%- elsif attribute == "Owner" %>
      <%= version.diff_html_owner(changeset) %>
      <%- elsif attribute == "Inventory status" %>
      <%= version.diff_html_status(changeset) %>
      <%- elsif attribute == "User" %>
      <%= version.diff_html_user(changeset) %>
      <%- else %>
      <%= version.diff_html(changeset) %>
      <%- end %>
      <hr/>
    <%- end -%>
  </div>
</div>

</div>
