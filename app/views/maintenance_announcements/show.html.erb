        <div class="span12">
            <table class="table table-condensed">
                <tr>
                    <th>User</th>
                    <th>Begin</th>
                    <th>End</th> 
                    <th>Owners</th>
                    <th>Machines</th>
                </tr>
                <tr>
                    <td><%= maintenance_announcement.user.display_name %></td>
                    <td><%= maintenance_announcement.begin_date %></td>
                    <td><%= maintenance_announcement.end_date %></td>
                    <td><%= maintenance_announcement.owner_links %></td>
                    <td><%= maintenance_announcement.machine_links %></td>
                </tr>
                <tr>
                    <th>Reason</th>
                    <th>Impact</th>
                    <th>Template</th>
                    <th>Tickets</th>
