                </tr>
                <tr>
                    <td><%= maintenance_announcement.reason %></td>
                    <td><%= maintenance_announcement.impact %></td>
                    <td><%= maintenance_announcement.template_link %></td>
                    <td><%= maintenance_announcement.ticket_links %></td>
