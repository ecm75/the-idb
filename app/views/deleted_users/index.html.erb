<div id="deleted-users-index">

<div class="row-fluid">
  <div class="span12">
    <div class="navbar">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="brand" href="<%= deleted_users_path %>">Deleted Users</a>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span8">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>Deleted at</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <%- @deleted_users.each do |user| -%>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.deleted_at.localtime %></td>
            <td>
              <%= link_to "Undelete", edit_deleted_user_path(user), class: "btn" %>
            </td>
          </tr>
        <%- end -%>
      </tbody>
    </table>
  </div>
</div>

</div>
